generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Career {
  id        Int      @id @default(autoincrement())
  title     String   
  path      String[]
  updatedAt DateTime @updatedAt
  tags      String[]
}

model UserSaved {
  id          Int      @id @default(autoincrement())
  userId      String   @unique
  saved       Int[]    // career IDs, but not relation
}

